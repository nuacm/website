<div class="col-lg-12">
  <h1><%= @member.name %></h1>

  <% if logged_in? :as_member => @member, :as_officer => true %>
  <div class="admin">
    <ul class="pull-right">
      <li><%= link_to 'Edit', edit_member_path(@member), :class => "btn btn-default" %></li>
      <li><%= link_to 'Delete', member_path(@member), :confirm => "Are you sure?", :method => :delete, :class => "btn btn-danger" %></li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <% end %>
</div>
