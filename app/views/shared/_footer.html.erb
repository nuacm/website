<div id="footer">
  <div class="container">
    <h2>Don't get left out. Sign up now!</h2>
    <%= form_for Member.new, :html => {:class => "form-inline"} do |f| %>
      <div class="form-group">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Full Name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
      </div>

      <%= f.submit "Sign up", :class => "btn btn-primary" %>
    <% end %>
    <p>&copy; NUACM 2013. Want to get involved? <a href="mailto:acm@ccs.neu.edu">Get at us.</a></p>
  </div>
</div>
