<% if current_member %>
  <div class="logged-in">Logged in as <%= current_member.name %></div>
  <div class="log-out"><%= link_to "Log Out", logout_path, :method => :delete %></div>
<% else %>
  <div class="sign-up"><%= link_to "Sign Up", signup_path %></div>
  <div class="sign-in"><%= link_to "Sign In", login_path %></div>
<% end %>