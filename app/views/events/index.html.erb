<div class="col-lg-7">
  <div class="events panel panel-default">
    <div class="panel-heading">
      <h3>Upcoming Events</h3>
    </div>
    <div class="panel-body">
      <% @upcoming_events.each do |event| %>
        <%= render "shared/event", :event => event %>
      <% end %>
    </div>
  </div>

  <br />

  <div class="events panel panel-default">
    <div class="panel-heading">
      <h3>Past Events</h3>
    </div>
    <div class="panel-body">
      <% @past_events.each do |event| %>
        <%= render "shared/event", :event => event %>
      <% end %>
    </div>
  </div>
</div>

