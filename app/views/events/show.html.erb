<div id="event" class="col-lg-12">
  <h1>
    <%= @event.title %>
    <% if logged_in? :as_officer => true %>
    <small>
      <%= link_to 'Edit', edit_event_path(@event) %>
      <%= link_to 'Delete', event_path(@event), :confirm => "Are you sure?", :method => :delete %>
    </small>
    <% end %>
  </h1>

  <p>
    <span class="glyphicon glyphicon-calendar"></span> <%= @event.start_time.localtime.strftime("%m/%d/%y") %>
    <span class="glyphicon glyphicon-time"></span> <%= @event.start_time.localtime.strftime("%I:%M %p") %>
    <% if @event.end_time %>
      <span class="glyphicon glyphicon-arrow-right" style="padding: 0 10px;"></span>
      <span class="glyphicon glyphicon-calendar"></span> <%= @event.end_time.localtime.strftime("%m/%d/%y") %>
      <span class="glyphicon glyphicon-time"></span> <%= @event.end_time.localtime.strftime("%I:%M %p") %>
    <% end %>
  </p>

  <p>
    <span class="glyphicon glyphicon-map-marker"></span> <%= @event.location %>
  </p>

  <p><%= @event.description %></p>

  <% @event.tags.each do |tag| %>
    <span class="label label-default"><%= tag.name %></span>
  <% end %>
</div>
