<div id="posts" class="col-lg-7">
  <div>
    <h1><%= link_to @post.title, post_path(@post) %> <small><%= @post.member.name %></small></h1>
    <% @post.tags.each do |tag| %>
      <span class="label label-default"><%= tag.name %></span>
    <% end %>
    <p><%= simple_format @post.body %></p>
  </div>
</div>

<div class="events col-lg-4 col-lg-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Upcoming Events</h3>
    </div>
    <div class="panel-body">
      <% @events.each do |event| %>
        <%= render "shared/event", :event => event %>
      <% end %>
    </div>
    <div class="panel-footer"><%= link_to "View more events", events_path %></div>
  </div>
</div>
