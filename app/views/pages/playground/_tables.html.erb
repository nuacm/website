<h2 id="tables">Tables</h2>

<dl>

  <dt><code>&#060;table&#062;</code></dt>
  <dd>
    <table>
      <tr>
        <th scope="row">Macbook Pro</td>
        <td>$1499</td>
        <td>2.5GHz Intel Core i5</td>
        <td>8GB DDR3L</td>
      </tr>
      <tr>
        <th scope="row">Macbook Air</td>
        <td>$999</td>
        <td>1.7GHz Intel Core i5</td>
        <td>4GB DDR3L</td>
      </tr>
    </table>

    <br />

    <table>
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Sales</th>
          <th scope="col">Comments</th>
        </tr>
      </thead>
      <tbody>
        <%
          sales    = 0
          comments = 0
          Date.new(2013,3).step(Date.new(2013,3,-1)).each do |date|
        %>
          <tr>
            <th scope="row"><%= date.strftime('%m/%d') %></th>
            <td><%= n = Random.rand(5000); sales += n; n %></td>
            <td><%= n = Random.rand(50); comments += n; n %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <td></td>
        <td><%= sales %></td>
        <td><%= comments %></td>
      </tfoot>
    </table>
  </dd>

</dl>
