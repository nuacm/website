<div class="col-lg-12">
  <h1><%= @post.title %></h1>

  <p>Written by <%= @post.member.name %></p>

  <%= simple_format @post.body %>

  <% unless @post.tags.empty? %>
    <div style="padding:5px;background-color:#eee">
      <% @post.tags.each do |tag| %>
        <span><%= tag.name %></span>
      <% end %>
    </div>
  <% end %>

  <% if logged_in? :as_officer => true %>
  <div class="well">
    <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
    <%= link_to 'Delete', post_path(@post), :confirm => "Are you sure?", :method => :delete, :class => "btn btn-danger" %>
  </div>
  <% end %>
</div>