<div class="col-lg-12">
  <% if logged_in? :as_officer => true %>
  <div class="admin">
    <span>
      <b><%= @posts.size %></b> posts written by
      <b><%= @posts.map { |p| p.member }.uniq.size %></b> authors.
    </span>
    <ul class="pull-right">
      <li><%= link_to 'Create', new_post_path, :class => "btn btn-success" %></li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <% end %>

  <h1>NUACM Newsroom</h1>

  <ol id="posts">
    <% @posts.each do |post| %>
    <div class="entry">
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= post.body %></p>
    </div>
    <% end %>
  </ol>
</div>
